# exercise3.py

import school_data

print(f"Student Information:")
print(f"Name       : {school_data.student_name}")
print(f"ID         : {school_data.student_id}")
print(f"Age        : {school_data.student_age}")

print(f"\nCourse Information:")
print(f"Code       : {school_data.course_code}")
print(f"Name       : {school_data.course_name}")

print(f"\nScores:")
print(f"Score 1    : {school_data.score1}")
print(f"Score 2    : {school_data.score2}")
print(f"Total      : {school_data.total_score}")
print(f"Square Root of Total: {school_data.sqrt_total_score:.2f}")

print(f"\nString Operations on Name:")
print(f"Uppercase  : {school_data.student_name_upper}")
print(f"Lowercase  : {school_data.student_name_lower}")
print(f"Length     : {school_data.student_name_length}")
